{
  "name": "drizzle-transaction-wrapper",
  "version": "0.1.2",
  "description": "Nested transaction support for Drizzle ORM with decorators, AsyncLocalStorage context propagation, and custom rollback control.",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HiskelKelemework/drizzle-transactional.git"
  },
  "bugs": {
    "url": "https://github.com/HiskelKelemework/drizzle-transactional/issues"
  },
  "homepage": "https://github.com/HiskelKelemework/drizzle-transactional#readme",
  "keywords": [
    "drizzle",
    "drizzle-orm",
    "transaction",
    "transactional",
    "decorator",
    "nested-transactions",
    "asynclocalstorage"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.29.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}